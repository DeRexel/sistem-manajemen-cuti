{% extends "layouts/dashboard.twig" %}

{% block title %}{{ status == 'pending' ? 'Cuti Pending' : 'Cuti Proses' }} - SICLE{% endblock %}

{% block page_title %}{{ status == 'pending' ? 'Pengajuan Cuti Pending' : 'Pengajuan Cuti Dalam Proses' }}{% endblock %}

{% block dashboard_content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div class="flex space-x-4">
            <a href="/admin/cuti/pending" class="px-4 py-2 rounded-md {{ status == 'pending' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700' }}">
                Pending
            </a>
            <a href="/admin/cuti/proses" class="px-4 py-2 rounded-md {{ status == 'proses' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700' }}">
                Proses
            </a>
        </div>
    </div>

    <div class="card overflow-hidden">
        {% if cuti_list %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pegawai</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jenis Cuti</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Periode</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lama</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aksi</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for cuti in cuti_list %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ cuti.employee_nama }}</div>
                            <div class="text-sm text-gray-500">{{ cuti.employee_nip }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ cuti.jenis_cuti|title }}</div>
                            <div class="text-sm text-gray-500">{{ cuti.alasan|slice(0, 30) }}{% if cuti.alasan|length > 30 %}...{% endif %}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ cuti.tanggal_mulai|date('d/m/Y') }} - {{ cuti.tanggal_selesai|date('d/m/Y') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ cuti.lama_hari }} hari
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% include 'components/status-badge.twig' with {'status': cuti.status, 'status_message': cuti.status_message} %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex space-x-2">
                                <!-- View Detail Button -->
                                <button onclick="viewDetail({{ cuti.id }})" class="text-blue-600 hover:text-blue-900" title="Lihat Detail">
                                    <i class="fas fa-eye"></i>
                                </button>
                                
                                {% if status == 'pending' %}
                                    <!-- Process Button -->
                                    <button onclick="updateStatus({{ cuti.id }}, 'proses')" class="text-green-600 hover:text-green-900" title="Proses">
                                        <i class="fas fa-play"></i>
                                    </button>
                                {% endif %}
                                
                                {% if status == 'proses' %}
                                    <!-- Upload Atasan TTD -->
                                    {% if cuti.form_signed_atasan_path %}
                                        <button onclick="showUploadedFile({{ cuti.id }})" class="text-green-600 hover:text-green-900" title="TTD Atasan Sudah Diupload - Klik untuk Preview">
                                            <i class="fas fa-check-circle"></i>
                                        </button>
                                    {% else %}
                                        <button onclick="document.getElementById('upload-atasan-{{ cuti.id }}').click()" class="text-purple-600 hover:text-purple-900" title="Upload TTD Atasan">
                                            <i class="fas fa-upload"></i>
                                        </button>
                                    {% endif %}
                                    <input type="file" id="upload-atasan-{{ cuti.id }}" accept=".pdf" style="display: none;" onchange="previewBeforeUpload('upload-atasan-{{ cuti.id }}', {{ cuti.id }}, 'atasan')">
                                    
                                    <!-- Approval Buttons -->
                                    {% if cuti.form_signed_atasan_path %}
                                        <button onclick="showApprovalModal({{ cuti.id }})" class="text-green-600 hover:text-green-900" title="Keputusan Atasan">
                                            <i class="fas fa-gavel"></i>
                                        </button>
                                    {% else %}
                                        <button class="text-gray-400 cursor-not-allowed" title="Upload TTD Atasan terlebih dahulu" disabled>
                                            <i class="fas fa-gavel"></i>
                                        </button>
                                    {% endif %}
                                    
                                    <!-- Cancel Atasan Button -->
                                    <button onclick="cancelCutiAtasan({{ cuti.id }})" class="text-red-600 hover:text-red-900" title="Batalkan (Atasan)">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                {% else %}
                                    <!-- Cancel Admin Button -->
                                    <button onclick="cancelCuti({{ cuti.id }})" class="text-red-600 hover:text-red-900" title="Batalkan (Admin)">
                                        <i class="fas fa-times"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-12">
            <i class="fas fa-inbox text-gray-400 text-4xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Tidak Ada Pengajuan {{ status|title }}</h3>
            <p class="text-gray-500">Semua pengajuan sudah diproses.</p>
        </div>
        {% endif %}
    </div>
</div>

<!-- Upload Preview Modal -->
<div id="uploadPreviewModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-4xl w-full mx-4 max-h-screen overflow-y-auto">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-medium text-gray-900">Preview File Upload</h3>
            <button onclick="closeUploadPreview()" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div id="previewContent" class="mb-4">
            <iframe id="previewFrame" class="w-full h-96 border rounded"></iframe>
        </div>
        
        <div class="flex justify-end space-x-4">
            <button onclick="closeUploadPreview()" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                Batal
            </button>
            <button id="confirmUploadBtn" onclick="confirmUpload()" class="btn-primary">
                Upload File
            </button>
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div id="approvalModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Keputusan Atasan Langsung</h3>
        
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Keputusan</label>
                <div class="space-y-2">
                    <label class="flex items-center">
                        <input type="radio" name="persetujuan" value="disetujui" class="mr-2">
                        <span>Disetujui</span>
                    </label>
                    <label class="flex items-center">
                        <input type="radio" name="persetujuan" value="perubahan" class="mr-2">
                        <span>Perubahan</span>
                    </label>
                    <label class="flex items-center">
                        <input type="radio" name="persetujuan" value="ditangguhkan" class="mr-2">
                        <span>Ditangguhkan</span>
                    </label>
                    <label class="flex items-center">
                        <input type="radio" name="persetujuan" value="tidak_disetujui" class="mr-2">
                        <span>Tidak Disetujui</span>
                    </label>
                </div>
            </div>
            
            <div>
                <label for="catatan" class="block text-sm font-medium text-gray-700">Catatan</label>
                <textarea id="catatan" rows="3" class="form-input mt-1" placeholder="Catatan atau alasan keputusan..."></textarea>
            </div>
        </div>
        
        <div class="flex justify-end space-x-4 mt-6">
            <button onclick="closeApprovalModal()" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                Batal
            </button>
            <button onclick="submitApproval()" class="btn-primary">
                Simpan Keputusan
            </button>
        </div>
    </div>
</div>

<script>
let currentCutiId = null;

// View PDF Detail - Preview Modal
function viewDetail(cutiId) {
    showPreviewModal(cutiId);
}

function showPreviewModal(cutiId) {
    const modal = document.createElement('div');
    modal.id = 'previewModal';
    modal.className = 'fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50';
    modal.innerHTML = `
        <div class="relative top-10 mx-auto p-5 border w-11/12 md:w-5/6 lg:w-4/5 shadow-lg rounded-md bg-white">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-medium text-gray-900">Preview Dokumen Cuti</h3>
                <button onclick="closePreviewModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <iframe id="documentFrame" src="/admin/cuti/preview/${cutiId}" class="w-full h-screen border rounded"></iframe>
        </div>
    `;
    document.body.appendChild(modal);
}

function closePreviewModal() {
    const modal = document.getElementById('previewModal');
    if (modal) {
        modal.remove();
    }
}

// Update Status
function updateStatus(cutiId, status, persetujuan = null, catatan = null) {
    let body = `status=${status}`;
    if (persetujuan) body += `&persetujuan_atasan=${persetujuan}`;
    if (catatan) body += `&catatan_atasan=${encodeURIComponent(catatan)}`;
    
    const xhr = new XMLHttpRequest();
    xhr.open('POST', `/admin/cuti/${cutiId}/status`, true);
    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
    xhr.onload = function() {
        location.reload();
    };
    xhr.onerror = function() {
        location.reload();
    };
    xhr.send(body);
}

function showApprovalModal(cutiId) {
    currentCutiId = cutiId;
    document.getElementById('approvalModal').classList.remove('hidden');
    document.getElementById('approvalModal').classList.add('flex');
}

function closeApprovalModal() {
    document.getElementById('approvalModal').classList.add('hidden');
    document.getElementById('approvalModal').classList.remove('flex');
    currentCutiId = null;
}

function submitApproval() {
    const persetujuan = document.querySelector('input[name="persetujuan"]:checked');
    const catatan = document.getElementById('catatan').value;
    
    if (!persetujuan) {
        alert('Pilih keputusan terlebih dahulu');
        return;
    }
    
    updateStatus(currentCutiId, 'selesai', persetujuan.value, catatan);
    closeApprovalModal();
}

function cancelCuti(cutiId) {
    const alasan = prompt('Alasan pembatalan (Admin):');
    if (alasan && alasan.trim()) {
        const xhr = new XMLHttpRequest();
        xhr.open('POST', `/admin/cuti/${cutiId}/status`, true);
        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
        xhr.onload = function() {
            location.reload();
        };
        xhr.onerror = function() {
            location.reload();
        };
        xhr.send(`status=cancel&alasan_admin=${encodeURIComponent(alasan)}`);
    }
}

function cancelCutiAtasan(cutiId) {
    const alasan = prompt('Alasan pembatalan (Atasan):');
    if (alasan && alasan.trim()) {
        const xhr = new XMLHttpRequest();
        xhr.open('POST', `/admin/cuti/${cutiId}/status`, true);
        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
        xhr.onload = function() {
            location.reload();
        };
        xhr.onerror = function() {
            location.reload();
        };
        xhr.send(`status=cancel&alasan_atasan=${encodeURIComponent(alasan)}&cancelled_by=atasan`);
    }
}

// Variables for upload preview
let pendingUpload = null;

// Preview before upload
function previewBeforeUpload(inputId, cutiId, type) {
    const fileInput = document.getElementById(inputId);
    const file = fileInput.files[0];
    
    if (!file) return;
    
    if (file.type !== 'application/pdf') {
        alert('Hanya file PDF yang diperbolehkan');
        return;
    }
    
    // Store upload info
    pendingUpload = { inputId, cutiId, type, file };
    
    // Show preview
    const fileURL = URL.createObjectURL(file);
    document.getElementById('previewFrame').src = fileURL;
    document.getElementById('confirmUploadBtn').style.display = 'inline-block';
    document.getElementById('uploadPreviewModal').classList.remove('hidden');
    document.getElementById('uploadPreviewModal').classList.add('flex');
}

// Confirm upload after preview
function confirmUpload() {
    if (!pendingUpload) return;
    
    const formData = new FormData();
    formData.append('signed_form', pendingUpload.file);
    
    const endpoint = `/admin/cuti/${pendingUpload.cutiId}/upload-atasan`;
    
    const xhr = new XMLHttpRequest();
    xhr.open('POST', endpoint, true);
    xhr.onload = function() {
        closeUploadPreview();
        location.reload();
    };
    xhr.onerror = function() {
        closeUploadPreview();
        location.reload();
    };
    xhr.send(formData);
}

// Show uploaded file preview
function showUploadedFile(cutiId) {
    document.getElementById('previewFrame').src = `/admin/cuti/preview/${cutiId}`;
    document.getElementById('confirmUploadBtn').style.display = 'none';
    document.getElementById('uploadPreviewModal').classList.remove('hidden');
    document.getElementById('uploadPreviewModal').classList.add('flex');
}

// Close upload preview
function closeUploadPreview() {
    document.getElementById('uploadPreviewModal').classList.add('hidden');
    document.getElementById('uploadPreviewModal').classList.remove('flex');
    
    if (pendingUpload) {
        URL.revokeObjectURL(document.getElementById('previewFrame').src);
        pendingUpload = null;
    }
}

// File Upload Handler (fallback)
function handleFileUpload(inputId, cutiId, type) {
    const fileInput = document.getElementById(inputId);
    const file = fileInput.files[0];
    
    if (!file) return;
    
    const formData = new FormData();
    formData.append('signed_form', file);
    
    const endpoint = type === 'atasan' ? `/admin/cuti/${cutiId}/upload-atasan` : `/user/cuti/${cutiId}/upload-signed`;
    
    const xhr = new XMLHttpRequest();
    xhr.open('POST', endpoint, true);
    xhr.onload = function() {
        location.reload();
    };
    xhr.onerror = function() {
        location.reload();
    };
    xhr.send(formData);
}
</script>
{% endblock %}