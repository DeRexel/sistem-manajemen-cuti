    .then(data => {
        if (data.success) {
            alert('Berkas tambahan berhasil diupload');
            closeBerkasModal();
            location.reload();
        } else {
            alert('Error upload berkas: ' + (data.error || 'Unknown error'));
            document.getElementById('confirmBerkasUpload').disabled = false;
            document.getElementById('confirmBerkasUpload').textContent = 'Upload Berkas';
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Berkas tambahan berhasil diupload');
        closeBerkasModal();
        location.reload();
    });
}
