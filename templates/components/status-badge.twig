{% set status_classes = {
    'pending': 'status-pending',
    'proses': 'status-proses', 
    'selesai': 'status-selesai',
    'cancel': 'status-cancel'
} %}

{% set status_labels = {
    'pending': 'Pending',
    'proses': 'Proses',
    'selesai': 'Selesai', 
    'cancel': 'Dibatalkan'
} %}

<div class="status-container">
    <span class="status-badge {{ status_classes[status] }}">
        {{ status_labels[status] }}
    </span>
    {% if status_message %}
        <div class="status-message text-sm text-gray-600 mt-1">
            {{ status_message }}
        </div>
    {% endif %}
</div>